@model VuQuangHuyMVC.Models.Category

@{
	ViewData["Title"] = "Category Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category Details</h1>
<hr />

<div class="row">
	<div class="col-md-6">
		<form>
			<!-- Category Name -->
			<div class="form-group">
				<label class="control-label">Category Name</label>
				<input class="form-control" value="@Model.CategoryName" readonly />
			</div>

			<!-- Category Description -->
			<div class="form-group">
				<label class="control-label">Category Description</label>
				<textarea class="form-control" rows="3" readonly>@Model.CategoryDesciption</textarea>
			</div>

			<!-- Active Status -->
			<div class="form-group">
				<label class="control-label">Active Status</label>
				<input class="form-control" value="@(Model.IsActive ?? false ? "Active" : "Inactive")" readonly />
			</div>

			<!-- Parent Category -->
			<div class="form-group">
				<label class="control-label">Parent Category</label>
				<input class="form-control" value="@ViewBag.ParentCategoryName" readonly />
			</div>
		</form>
	</div>
</div>

<div class="form-group mt-3">
	<a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-primary">Edit</a>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
