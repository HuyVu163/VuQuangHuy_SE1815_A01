@model VuQuangHuyMVC.Models.Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Category</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />

            <!-- Category Name -->
            <div class="form-group">
                <label class="control-label">Category Name</label>
                <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <!-- Category Description -->
            <div class="form-group">
                <label class="control-label">Category Description</label>
                <textarea asp-for="CategoryDesciption" class="form-control" rows="3" placeholder="Enter category description"></textarea>
                <span asp-validation-for="CategoryDesciption" class="text-danger"></span>
            </div>

            <!-- Parent Category -->
            <div class="form-group">
                <label class="control-label">Parent Category</label>
                <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.ParentCategoryId">
                    <option value="">-- Select Parent Category --</option>
                </select>
                <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
            </div>

            <!-- Is Active -->
            <div class="form-group">
                <label class="control-label">Active Status</label>
                <select asp-for="IsActive" class="form-control">
                    <option value="true" selected="@(Model.IsActive ?? false)">Active</option>
                    <option value="false" selected="@(Model.IsActive == false)">Inactive</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
