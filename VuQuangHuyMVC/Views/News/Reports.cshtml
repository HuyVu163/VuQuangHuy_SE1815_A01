@model IEnumerable<VuQuangHuyMVC.Models.NewsArticle>

@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="page-title text-center">📋 News Reports</h1>

    <!-- Form chọn ngày -->
    <div class="report-container">
        <form method="post" class="report-form">
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label for="startDate" class="form-label">Start Date:</label>
                    <input type="date" name="startDate" class="form-control" required />
                </div>
                <div class="col-md-5">
                    <label for="endDate" class="form-label">End Date:</label>
                    <input type="date" name="endDate" class="form-control" required />
                </div>
                <div class="col-md-2 d-flex justify-content-center">
                    <button type="submit" class="btn btn-success">
                        📊 Generate Report
                    </button>
                </div>
            </div>
        </form>
    </div>

    <hr>

    <!-- Hiển thị bảng báo cáo -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover report-table">
                <thead>
                    <tr>
                        <th>📰 Title</th>
                        <th>📅 Created Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var news in Model)
                    {
                        <tr>
                            <td>@news.NewsTitle</td>
                            <td>@news.CreatedDate?.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="no-data">⚠️ Không có dữ liệu trong khoảng thời gian này.</p>
    }
</div>

<style>
    /* Màu xanh lá cây nhạt */
    :root {
        --primary-green: #28a745; /* Màu xanh lá */
        --hover-green: #218838; /* Màu hover */
        --light-green-bg: #e8f5e9; /* Nền xanh lá nhạt */
    }

    /* Tiêu đề trang */
    .page-title {
        color: var(--primary-green);
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Form chọn ngày */
    .report-container {
        display: flex;
        justify-content: center;
        padding: 20px;
        background: var(--light-green-bg);
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .report-form .form-control {
        font-size: 14px;
        padding: 10px;
        border: 1px solid var(--primary-green);
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        font-weight: bold;
        padding: 12px 20px;
        font-size: 16px;
        display: flex;
        align-items: center; /* Căn giữa icon và text */
        justify-content: center;
        gap: 8px; /* Khoảng cách giữa icon và chữ */
        width: 100%; /* Đảm bảo nút rộng đủ */
        min-width: 85px; /* Đặt chiều rộng tối thiểu */
        text-align: center;
        border-radius: 8px;
        transition: background 0.3s ease-in-out;
    }

        .btn-success:hover {
            background-color: #218838;
        }

        .btn-success i {
            font-size: 18px; /* Điều chỉnh kích thước icon */
        }


    /* Bảng báo cáo */
    .report-table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        .report-table thead {
            background-color: var(--primary-green);
            color: white;
            font-size: 16px;
        }

        .report-table th,
        .report-table td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
            font-size: 14px;
        }

    /* Hiệu ứng hover */
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        transition: 0.3s ease-in-out;
    }

    /* Hiển thị nếu không có dữ liệu */
    .no-data {
        color: red;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        margin-top: 20px;
    }
</style>
