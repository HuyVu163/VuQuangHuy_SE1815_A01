@model VuQuangHuyMVC.Models.NewsArticle

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var role = Context.Session.GetString("Role");
}

<h1>Details</h1>

<hr />
<div class="row">
	<div class="col-md-6">
		<form>
			<div class="form-group">
				<label class="control-label">Title</label>
				<input class="form-control" value="@Model.NewsTitle" readonly />
			</div>

			<div class="form-group">
				<label class="control-label">Headline</label>
				<input class="form-control" value="@Model.Headline" readonly />
			</div>

			<div class="form-group">
				<label class="control-label">Created Date</label>
				<input class="form-control" value="@Model.CreatedDate" readonly />
			</div>

			<div class="form-group">
				<label class="control-label">Content</label>
				<textarea class="form-control" rows="4" readonly>@Model.NewsContent</textarea>
			</div>

			<div class="form-group">
				<label class="control-label">Source</label>
				<input class="form-control" value="@Model.NewsSource" readonly />
			</div>

			@if (role == "Staff")
			{
				<div class="form-group">
					<label class="control-label">Status</label>
					<input class="form-control" value="@ViewBag.NewsStatus" readonly />
				</div>

				<div class="form-group">
					<label class="control-label">Updated By</label>
					<input class="form-control" value="@ViewBag.UpdatedByName" readonly />
				</div>

				<div class="form-group">
					<label class="control-label">Modified Date</label>
					<input class="form-control" value="@Model.ModifiedDate?.ToString("dd/MM/yyyy")" readonly />
				</div>

				<div class="form-group">
					<label class="control-label">Category</label>
					<input class="form-control" value="@ViewBag.CategoryName" readonly />
				</div>

				<div class="form-group">
					<label class="control-label">Created By</label>
					<input class="form-control" value="@(ViewBag.CreatedByName ?? "N/A")" readonly />
				</div>
			}
			<div>
				<div class="form-group mt-3">
					<a asp-action="Index" class="btn btn-secondary">
						<i class="fa fa-arrow-left"></i> Back to List
					</a>
				</div>
			</div>
		</form>
	</div>
</div>


