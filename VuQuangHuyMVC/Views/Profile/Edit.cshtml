@model VuQuangHuyMVC.Models.SystemAccount

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Profile</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="AccountId" />

                <div class="mb-3">
                    <label asp-for="AccountName" class="form-label"></label>
                    <input asp-for="AccountName" class="form-control" />
                    <span asp-validation-for="AccountName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountEmail" class="form-label"></label>
                    <input asp-for="AccountEmail" class="form-control" type="email" />
                    <span asp-validation-for="AccountEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountRole" class="form-label"></label>
                    <input asp-for="AccountRole" class="form-control" />
                    <span asp-validation-for="AccountRole" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountPassword" class="form-label"></label>
                    <input asp-for="AccountPassword" class="form-control"  />
                    <span asp-validation-for="AccountPassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a asp-controller="News" asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
